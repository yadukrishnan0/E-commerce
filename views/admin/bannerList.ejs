<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Banners</title>
    <link rel="stylesheet" href='/admincss/usersList.css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.7.1.slim.js"></script>
    <script src="https://kit.fontawesome.com/d4181b2b31.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body>

    <section id="menu">
        <div class="logo">
            <img src="/images/logo.png" alt="">
            <h2>Dynamic</h2>
        </div>
        <div class="items">
            <li><i class="fa-solid fa-chart-pie"></i> <a href="/admin/home">Dashboard</a></li>
            <li><i class="fa-solid fa-table-cells-large"></i> <a href="/admin/productslist">Products</li>
            <li> <i class="fa-regular fa-pen-to-square"></i> <a href="/admin/userslist">Users</a></li>
            <li> <i class="fa-regular fa-pen-to-square"></i> <a href="/admin/blockeduser">Blocked Users</a></li>
            <li><i class="fa-solid fa-credit-card"></i> <a href="/admin/categorylist">Category</a></li>
            <li><i class="fa-solid fa-credit-card"></i> <a href="/admin/order">Orders</a></li>
            <li><i class="fa-solid fa-burger"></i> <a href="/admin/couponslist">coupon</a></li>
            <li><i class="fa-solid fa-burger"></i> <a href='/admin/bannerlist'>Banner</a></li>
            <li><i class="fa-solid fa-chart-line"></i> <a href="/admin/addproducts">Add products</a></li>
            <li><i class="fa-solid fa-right-from-bracket"></i> <a href="/admin/logout">Logout</a></li>

        </div>

    </section>


    <section id="interface">
        <div class="navigation">
            <div class="n1">
                <div>
                    <i id="menu-btn" class="fa-solid fa-bars"></i>
                </div>
                <div class="search">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input type="text" placeholder="Search">
                </div>
            </div>

            <div class="profile">
                <i class="fa-solid fa-bell"></i>
                <img src="" alt="">
            </div>
        </div>

        <h3 class="i-name">BANNERS</h3>
        <a href="/admin/addbanner"><h4 class="f-name">Add Banners<i class="fa-solid fa-circle-plus"></i></h4></a>
         </div>
     <dir class="board">
            <table width="100%"> 
                <thead>
                    <tr>
                        <td>Title</td>
                        <td>Discription</td>
                        <td>Expiry</td>
                        <td>Actions</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(data=>{%>
                    <tr class="delete_tr<%= data._id%>">
                        <td class="people"> 
                            <img src="/Productimag/<%=data.BannerImage%>" alt="">
                            <div class="people-de">
                                <h5><%=data.Title%></h5>
                                <!-- <p>hello</p> -->
                            </div>
                        </td>

                        <td class="people-des">
                          <h5><%=data.Discription%></h5>
                          <!-- <p>web dev</p> -->
                        </td>

                        <td class="active"><p><%=data.Expiry.toDateString()%></p></td>

                        <td class="role"><a href="/admin/updateBanner?id=<%=data._id%>"><i class="fa-solid fa-pen"></i></a></td>

                        <td class="edit"> <a href="/admin/delete/"><i class="fa-solid fa-trash"  onclick="deleteCat(event,'<%=data._id%>')"></i></a></td>
                    </tr>

                    <%})%>
                    



                 






                
                    
                </tbody>
            </table>
        </div>
    </section>

    <script>
        $("#menu-btn").click(function () {
  $("#menu").toggleClass("active");
});

async function deleteCat(event,catId) {
  event.preventDefault();

  try {
    const response = await axios.delete(`/admin/deletebanner?id=${catId}`);
    const result = response.data;
    if (result.success) {
      document.querySelector(`.delete_tr${catId}`).remove();
    }
  } catch (error) {
    console.log(error);
  }
}
    </script>
</body>

</html>