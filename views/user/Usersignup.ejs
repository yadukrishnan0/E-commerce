<%- include('../partials/header.ejs') %>
    <!-- end of header -->

    <!-- main content -->
    <main>
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 m-0 loginsection d-flex align-items-center justify-content-center">
                        <div class="loginbox">
                            <div class="headingLogin d-inline-block">
                                <p>Register</p>
                            </div>
                            <!-- <div class="error p-0 d-inline-block">
                                <p><i class="fa-solid fa-circle-exclamation" style="color: #ff0000;"></i> Invalid credentials</p>
                            </div> -->
                            <div class="inputForm d-inline-block">
                                <form action="/signup" method="post">
                                    <label class="d-block" for="fullName">Fullname</label>
                                    <input class="d-block" type="text" name="fullName"  required />
                                    <label class="d-block" for="phoneNumber">Phone</label>
                                    <input class="d-block" type="number" name="phoneNumber" required/>
                                    <label class="d-block labemail" for="phoneNumber">Email</label>
                                    <input class="d-block " type="email" name="email" required id="email"/>
                                    <label class="d-block labpassword" for="password">Password</label>
                                    <input class="d-block " type="password" name="password" required id="password"/>
                                    <label class="d-block labcon" for="confirmPassword">Confirm Password</label>
                                    <input class="d-block " type="password" name="confirmPassword" required id="confirmPassword"/>
                                    <div class="text-center m-0">
                                        <button class="loginBtn" type="submit">Create Account</button>
                                       
                                   </div>
                                    
                                </form>
                                <%if(error){ %>
                                    <p class="error"><%=error%></>
                        
                                    <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- end of main content -->

    
    <!-- end of footer -->



    <!-- custom js -->
    <script src="/clientsideVlidation/signupValidation.js"></script>
    <!-- end of custom js -->
    <!-- fontawesome -->
    <script src="https://kit.fontawesome.com/23d1247997.js" crossorigin="anonymous"></script>
    <!-- end of fontawesome -->
    <!-- Bootstrap script file -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!--end of Bootstrap script file -->
</body>
</html>